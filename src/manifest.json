{
  "name": "Git Pro",
  "author": "simon hsu",
  "authorEmail" : "coolchyni@gmail.com",
  "identifier": "me.dmsy.git-plugin",
  "compatibleVersion": 3,
  "bundleVersion": 2,
  "commands": [
    {
      "name": "update",
      "identifier": "update",
      "script": "./commands/update.js",
      "handlers" : {
        "actions": {
          "OpenDocument": "onRun"
        }
      }
    },
    {
      "name": "unzipOnSave",
      "identifier": "unzipOnSave",
      "script": "./commands/unzipOnSave.js",
      "handlers" : {
        "run": "onRun",
        "actions": {
          "DocumentSaved": "onRun"
        }
      }
    },
    {
      "name": "commit",
      "identifier": "commit",
      "shortcut": "cmd ctrl c",
      "script": "./commands/Commit.js",
      "description" : "Commit your changes.",
      "icon" : "icons/commit.png"
    },
    {
      "name": "push",
      "identifier": "push",
      "shortcut": "cmd ctrl p",
      "script": "./commands/Push.js",
      "description" : "Push your commits to GitHub.",
      "icon" : "icons/push.png"
    },
    {
      "name": "branches",
      "identifier": "branches",
      "shortcut": "cmd ctrl b",
      "script": "./commands/Branches.js",
      "description" : "Manage git branches.",
      "icon" : "icons/branches.png"
    },
    {
      "name": "pull",
      "identifier": "pull",
      "script": "./commands/Pull.js",
      "description" : "Pull changes and branches from GitHub.",
      "icon" : "icons/pull.png"
    },
    {
      "name": "init",
      "identifier": "init",
      "script": "./commands/Init.js"
    },
    {
      "name": "preferences",
      "identifier": "preferences",
      "script": "./commands/Preferences.js"
    },
    {
      "name": "terminal",
      "identifier": "terminal",
      "script": "./commands/OpenTerminal.js"
    },
    {
      "name": "remote",
      "identifier": "setremote",
      "script": "./commands/SetRemote.js"
    },
    {
      "name": "reset",
      "identifier": "reset",
      "script": "./commands/reset.js"
    },
    {
      "name": "English",
      "identifier": "english",
      "script": "./lang/enUS.js"
    },
    {
      "name": "中文",
      "identifier": "chinese",
      "script": "./lang/zhCN.js"
    },

    {
      "name": "checkupdate",
      "identifier": "checkupdate",
      "script": "./commands/update.js"
    }

  ],
  "menu": {
    "title": "Git pro",
    "items": [
      "commit",
      "push",
      "pull",
      "reset",
      "branches",
      {
        "title": "advance..",
        "items": [
          "init",
          "setremote",
          "terminal",
          "checkupdate",
          {
            "title":"language..",
            "items":[
              "english",
              "chinese"
            ]
          }
        ]
      }
      
    ]
  }
}
